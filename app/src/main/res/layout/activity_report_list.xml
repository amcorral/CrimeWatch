<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <ImageView
            android:id="@+id/mapNavButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/map"
            android:contextClickable="false"/>

        <ImageView
            android:id="@+id/houseNavButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/house"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:background="#6C76A9"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    <TextView
        android:id="@+id/incidentCategoryBreakdown"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textAlignment="center"
        android:paddingTop="10dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/incidentNumberText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="Incident Number"
                android:paddingLeft="10dp"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/incidentNumberTV"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/incidentAddressText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="Incident Address: "
                android:paddingLeft="10dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/incidentAddressTV"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/incidentResText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="Incident Resolution: "
                android:paddingLeft="10dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/incidentResTV"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/incidentDescriptionText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="Incident Description: "
                android:paddingLeft="10dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/incidentDescriptionTV"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textSize="14dp"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/incidentDateText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="Incident Date: "
                android:paddingLeft="10dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/incidentDateTV"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:textColor="#ffffff"/>
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/policeReportListView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:dividerHeight="2dp"/>


</LinearLayout>